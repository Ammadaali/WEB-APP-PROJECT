@model Web_Project_Tour_and_Travel.Models.Pkg
@{
    ViewBag.Title = "AddPkg";
    Layout = "~/Views/Shared/_AdminLayoutPage1.cshtml";
}

<link rel="stylesheet" href="~/Content/custom-style.css">
<style>
    /* Custom styles */
    .container {
        padding-top: 50px; /* Adjust the value to your preference */
    }

    /* Optional: Additional styles for form elements */
    .form-group {
        margin-bottom: 20px;
    }

    /* Optional: Style for submit button */
    .btn-add {
        background-color: #DC3545; /* Red color, you can change it */
        color: white;
    }

    .control-label{
        font-size: 20px;
        font-weight: bold;
        
    }

    /* Optional: Style for success message */
    .success-message {
        color: #28A745; /* Green color, you can change it */
    }

    /* Left padding for Add Package heading */
    .add-heading {
        margin-left: 25px; /* Adjust the left margin to your preference */
        font-size: 35px;
        font-weight: bold;
    }
</style>

<h2 class="add-heading">Add Package</h2>
<div class="container">
    <div class="col-lg-6">
        @using (Html.BeginForm("AddPkg", "Admin", FormMethod.Post, htmlAttributes: new { enctype = "multipart/form-data", @class = "form-horizontal" }))
        {
            <div class="form-group">
                <label class="control-label">Package Name:</label>
                <select name="Offers" class="form-control">
                    <option value="">Select Offer</option>
                    <option>Silver Umrah offer </option>
                    <option>Golden Umrah offer</option>
                    <option>Diamond Hajj offer</option>
                    <option>Platinum Hajj offer</option>
                    <option>Silver Naraan offer </option>
                    <option>Golden Kashmir offer</option>
                    <option>Diamond Skurdu offer</option>
                    <option>Platinum Hunza offer</option>
                </select>
            </div>
            <div class="form-group">
                <label class="control-label">Package Image:</label>
                <input type="file" name="image" class="form-control" />
            </div>
            <div class="form-group">
                <label class="control-label">Description:</label>
                @Html.TextAreaFor(x => x.Description, new { @class = "form-control" })
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-add" />
            </div>
            <div class="form-group">
                <h3 class="success-message">@ViewBag.pk</h3>
            </div>
        }
    </div>
</div>
